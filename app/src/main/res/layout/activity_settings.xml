<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="Буцах"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvSettingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Тохиргоо"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintTop_toTopOf="@id/btnBack" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Төлөв: ..."
        android:textSize="15sp"
        android:gravity="center"
        android:lineSpacingExtra="6dp"
        android:padding="20dp"
        android:background="@drawable/status_border_bg"
        android:textColor="@color/status_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnEnableCallScreening"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Call Screening асаах"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnEnableOverlay"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Overlay зөвшөөрөл асаах"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnEnableUsageAccess"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Usage Access асаах" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
